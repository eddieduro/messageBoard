{{#if showNewPostForm}}
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="value"}}
      </div>
      <div class="form-group">
        <label for="message">Question:</label>
        {{input value=message id='message'}}
      </div>
      <div class="form-group">
        <label for="author">name:</label>
        {{input value=author id='author'}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input type='date' value=date id='date'}}
      </div>
      <button class="btn deep-purple lighten-4" {{action 'savePost'}}>Submit</button>
    </form>
  </div>
{{else}}
<div class="container">
  <button class="btn deep-purple lighten-4" {{action 'showForm'}}>Ask a new question!</button>
</div>
{{/if}}
