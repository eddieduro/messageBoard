 {{#liquid-if showNewPostForm class='activeForm'}}
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="message">Question:</label>
        {{input value=message id='message'}}
      </div>
      <div class="form-group">
        <label for="author">name:</label>
        {{input value=author id='author'}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
       {{md-input-date value=date}}
      </div>
      <button class="btn deep-purple lighten-4" {{action 'savePost'}}>Submit</button>
      <button class="btn deep-purple lighten-4" {{action 'closeForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
<div class="container">
  <button class="btn deep-purple lighten-4" {{action 'showForm'}}>Ask a new question!</button>
</div>
{{/liquid-if}}
