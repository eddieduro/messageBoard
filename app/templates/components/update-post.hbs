{{#liquid-if showUpdatePostForm class='activeForm'}}
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title" placeholder=post.title}}
    </div>
    <div class="form-group">
      <label for="message">Question:</label>
      {{input value=message id="message" placeholder=post.message}}
    </div>
    <div class="form-group">
      <label for="author">name:</label>
      {{input value=author id='author' placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{md-input-date value=date}}
    </div>
    <button class="btn deep-purple lighten-4" {{action 'updatePost' post}}>Submit</button>
    <button class="btn deep-purple lighten-4" {{action 'closeForm'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn deep-purple lighten-4" {{action 'updatePostForm'}}>update question</button>
{{/liquid-if}}
