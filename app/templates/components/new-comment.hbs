{{#if showNewCommentForm}}
  <div class="container">
    <form>
      <div class="form-group">
        <label for="message">Comment:</label>
        {{input value=message id="value"}}
      </div>
      <div class="form-group">
        <label for="author">name:</label>
        {{input value=author id='author'}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input type='date' value=date id='date'}}
      </div>
      <button class="btn deep-purple lighten-4" {{action 'saveComment'}}>Submit</button>
    </form>
  </div>
{{else}}
<div class="container">
  <button class="btn deep-purple lighten-4" {{action 'showForm'}}>add a comment!</button>
</div>
{{/if}}
